{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"], // Consider if this should be removed/updated later if components move to FSD
      "@services/*": ["./src/services/*"],   // Consider if this should be removed/updated later
      "@core/*": ["./src/core/*"],         // Consider if this should be removed/updated later
      // "@types/*": ["./src/types/*"], // Removed
      // "@utils/*": ["./src/utils/*"], // Removed
      "@store/*": ["./src/store/*"],         // Consider if this should be removed/updated later
      "@electron/*": ["./electron/*"],
      "app/*": ["./src/app/*"],
      "entities/*": ["./src/entities/*"],
      "features/*": ["./src/features/*"],
      "pages/*": ["./src/pages/*"],
      "shared/*": ["./src/shared/*"],
      "widgets/*": ["./src/widgets/*"]
    }
  },
  "include": ["electron/**/*", "types/**/*.d.ts", "**/*.ts", "**/*.tsx", "src/**/*"],
  "exclude": ["node_modules"]
}
