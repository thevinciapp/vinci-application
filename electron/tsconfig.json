{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "../build",
    "rootDir": "../",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "baseUrl": "../",
    "paths": {
      "@lib/*": ["lib/*"],
      "@/*": ["*"]
    }
  },
  "include": ["./**/*", "../types/electron.d.ts", "../lib/**/*.ts"],
  "exclude": ["../lib/**/*.tsx"]
}